<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.WhereTripsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tv_where_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Where"
        app:titleTextAppearance="@style/Toolbar.Title"
        app:navigationIcon="@drawable/ic_close"/>


    <TextView
        android:id="@+id/tv_select_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/satoshi_medium"
        android:text="@string/please_select_a_city"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_desc_color"
        android:textSize="14sp"/>


    <AutoCompleteTextView
        android:id="@+id/actv_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_auto_outline"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="26dp"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/satoshi_medium"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:hint="@string/please_select_a_city"
        />

</LinearLayout>